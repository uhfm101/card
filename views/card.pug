extends layout

block content
    div(class = `card ${cardClass}`)
        h3.title Saul's Insurance
        div.info-row.name-row
            p.label.black Name:
            p #{firstName} #{lastName}
        div.info-container
            div.info-row
                p.label.black Insurance Type:
                p #{type}
            div.info-row
                //getMonth() Get the month as a number (0-11)
                //Get the day as a number (0-31)
                //getFullYear() Get thew year as a four digit number (yyyy)
                p.label.black DOB:
                p #{dateOfBirth.getMonth()+1}/#{dateOfBirth.getDate()}/#{dateOfBirth.getFullYear()}
        div.info-row
            div
                p.label.black Address:

                div.address-text
                    p #{addressLine1}
                    p #{addressLine2}
                    p #{city}, #{state}, #{zip}
        div.info-container
            div.info-row
                p.label.black Acct #:
                p #{accountNumber}
            div.info-row
                p.label.black Exp.:
                // Add 4 years to today's date to get the expiration date
                p #{currentDate.getMonth()+1}/#{currentDate.getDate()}/#{currentDate.getFullYear()+4}
        div.info-container
            div.info-row
                p.label.black Starting Date.:
                p #{startDate.getMonth()}/#{startDate.getDate()}/#{startDate.getFullYear()}

    a(href = '/') To home page